Final Project (Calculator)

import re

print("Our Magical Calculator")
print("Type 'quit' to exit\n")

#hold the result fo the previous calculated equation
previous = 0
run = True

#define function
def performMath():
    #kita masukkan global, and nama global variabke (run) yang kita try nak access
    global run
    #grab access from previous global variable
    global previous
    equation = ""
    if previous == 0:
       equation = input ("Enter equation:")
    else:
       equation = input(str(previous))


    if equation == 'quit':
        print("Thank you")
        run = False
    else:
        #masukkan variable baru untuk exclude bnda slain nom sbb takut eval evaluate smua
        equation = re.sub('[a-zA-Z,.:()" "]', '', equation)

        if previous == 0:
            # eval tu guna utk kira kita punya math
            previous = eval(equation)
        else:
            previous = eval(str(previous) + equation)


while run:
    performMath()






